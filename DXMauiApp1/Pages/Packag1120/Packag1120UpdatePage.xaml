<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:dxc="clr-namespace:DevExpress.Maui.Controls;assembly=DevExpress.Maui.Controls"
             xmlns:dxe="clr-namespace:DevExpress.Maui.Editors;assembly=DevExpress.Maui.Editors"
             xmlns:dxg="clr-namespace:DevExpress.Maui.DataGrid;assembly=DevExpress.Maui.DataGrid"
             x:Class="DXMauiApp1.Pages.Packag1120UpdatePage"
             Title="更新位置">
    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout
                Padding="24"
                Spacing="24">

                <Grid
                    BackgroundColor="WhiteSmoke"
                    Margin="-24,-24,-24,0"
                    Padding="24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="56" />
                    </Grid.RowDefinitions>

                    <dxe:TextEdit 
                        x:Name="TextEditWaybillNumber"
                        BackgroundColor="White"
                        BoxPadding="18,16"
                        BorderThickness="0.9"
                        ClearIconClicked="TextEditWaybillNumber_ClearIconClicked"
                        ClearIconVisibility="Auto"
                        CornerRadius="0"
                        DisabledBorderThickness="0.9"
                        ErrorText=" "
                        FocusedBorderThickness="0.9"
                        Grid.Column="0"
                        Grid.Row="0"
                        HelpText=" "
                        IsErrorIconVisible="False"
                        LabelFontSize="17"
                        LabelText="运单号"
                        Margin="0,-11,0,-16"
                        TextChanged="TextEditWaybillNumber_TextChanged"
                        TextFontSize="17" />

                    <Button 
                        x:Name="ButtonSearch"
                        Clicked="ButtonSearch_Clicked"
                        Grid.Column="1"
                        Grid.Row="0"
                        HeightRequest="56"
                        Text="查询" 
                        WidthRequest="75" />
                </Grid>

                <dxe:TextEdit 
                    x:Name="TextEditLocation"
                    BoxPadding="18,16"
                    BorderThickness="0.9"
                    ClearIconVisibility="Never"
                    CornerRadius="0"
                    DisabledBorderThickness="0.9"
                    ErrorText=" "
                    FocusedBorderThickness="0.9"
                    HelpText=" "
                    IsErrorIconVisible="False"
                    LabelFontSize="17"
                    LabelText="库位"
                    Margin="0,-11,0,-16"
                    TextChanged="TextEditLocation_TextChanged"
                    TextFontSize="17" />

                <dxe:MultilineEdit
                    x:Name="MultilineEditCargoDescription"
                    BoxPadding="18,16"
                    BorderThickness="0.9"
                    ClearIconVisibility="Never"
                    CornerRadius="0"
                    DisabledBorderThickness="0.9"
                    ErrorText=" "
                    FocusedBorderThickness="0.9"
                    HelpText=" "
                    IsErrorIconVisible="False"
                    LabelFontSize="17"
                    LabelText="品名"
                    Margin="0,-11,0,-16"
                    MinLineCount="4"
                    TextChanged="MultilineEditCargoDescription_TextChanged"
                    TextFontSize="17" />

                <dxe:NumericEdit 
                    x:Name="NumericEditVolume"
                    AllowNullValue="True"
                    BoxPadding="18,16"
                    BorderThickness="0.9"
                    ClearIconVisibility="Never"
                    CornerRadius="0"
                    DisabledBorderThickness="0.9"
                    ErrorText=" "
                    FocusedBorderThickness="0.9"
                    HelpText=" "
                    IsErrorIconVisible="False"
                    LabelFontSize="17"
                    LabelText="体积 M³"
                    Margin="0,-11,0,-16"
                    MaxDecimalDigitCount="4"
                    TextFontSize="17"
                    TextHorizontalAlignment="Start"
                    ValueChanged="NumericEditVolume_ValueChanged" />

                <Grid
                    BackgroundColor="WhiteSmoke"
                    Margin="-24,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="75" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="56" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Label
                        Grid.Column="0"
                        Grid.Row="0"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        Text="体积明细" />

                    <Label
                        x:Name="LabelTotalVolume"
                        Grid.Column="1"
                        Grid.Row="0"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        Text="0 M³" />

                    <Button 
                        x:Name="ButtonSizeLsCreate"
                        Clicked="ButtonSizeLsCreate_Clicked"
                        Grid.Column="2"
                        Grid.Row="0"
                        HeightRequest="56"
                        IsEnabled="False"
                        Text="新增" 
                        WidthRequest="75" />

                    <Frame
                        Grid.Column="0"
                        Grid.Row="1"
                        Grid.ColumnSpan="3"
                        Padding="0">
                        <dxg:DataGridView 
                            x:Name="DataGridViewSizeLs"
                            ColumnHeaderHeight="56"
                            FullSwipeMode="None"
                            ReduceHeightToContent="True"
                            RowHeight="56"
                            SelectionMode="None"
                            AllowSort="False">

                            <dxg:DataGridView.Columns>
                                <dxg:TextColumn 
                                    Caption="长 CM"
                                    FieldName="L"
                                    HorizontalContentAlignment="Center"
                                    Width="12*" />

                                <dxg:TextColumn 
                                    Caption="宽 CM" 
                                    FieldName="W" 
                                    HorizontalContentAlignment="Center"
                                    Width="12*" />

                                <dxg:TextColumn 
                                    Caption="高 CM"
                                    FieldName="H" 
                                    HorizontalContentAlignment="Center"
                                    Width="12*" />

                                <dxg:TextColumn 
                                    Caption="体积 M³"
                                    FieldName="V" 
                                    HorizontalContentAlignment="Center"
                                    Width="15*" />

                                <dxg:TextColumn 
                                    Caption="件数"
                                    FieldName="P" 
                                    HorizontalContentAlignment="Center"
                                    Width="12*" />
                            </dxg:DataGridView.Columns>

                            <dxg:DataGridView.EndSwipeItems>
                                <dxg:SwipeItem 
                                    x:Name="SwipeItemSizeLsUpdate"
                                    BackgroundColor="Black"
                                    Caption="编辑" 
                                    Tap="SwipeItemSizeLsUpdate_Tap"
                                    Width="75" />
                                <dxg:SwipeItem 
                                    x:Name="SwipeItemSizeLsDelete"
                                    BackgroundColor="Crimson"
                                    Caption="删除" 
                                    Tap="SwipeItemSizeLsDelete_Tap"
                                    Width="75" />
                            </dxg:DataGridView.EndSwipeItems>
                        </dxg:DataGridView>
                    </Frame>
                </Grid>

                <Button 
                    x:Name="ButtonSubmit"
                    Clicked="ButtonSubmit_Clicked"
                    HeightRequest="56"
                    Text="立即提交" />

                <dxc:DXPopup 
                    x:Name="DXPopupSizeLsCreateUpdate"
                    AllowScrim="True"
                    CornerRadius="0"
                    HorizontalAlignment="Stretch"
                    Margin="24"
                    VerticalAlignment="Bottom">

                    <ScrollView 
                        x:Name="ScrollViewSizeLsCreateUpdate"
                        MaximumHeightRequest="512">
                        <VerticalStackLayout
                            Padding="24"
                            Spacing="24">

                            <dxe:NumericEdit 
                                x:Name="NumericEditSizeLsCreateUpdateL"
                                AllowNullValue="True"
                                BoxPadding="18,16"
                                BorderThickness="0.9"
                                ClearIconVisibility="Never"
                                CornerRadius="0"
                                DisabledBorderThickness="0.9"
                                ErrorText=" "
                                FocusedBorderThickness="0.9"
                                HelpText=" "
                                IsErrorIconVisible="False"
                                LabelFontSize="17"
                                LabelText="长 CM"
                                Margin="0,-11,0,-16"
                                MaxDecimalDigitCount="0"
                                TextFontSize="17"
                                TextHorizontalAlignment="Start"
                                ValueChanged="NumericEditSizeLsCreateUpdateL_ValueChanged" />

                            <dxe:NumericEdit 
                                x:Name="NumericEditSizeLsCreateUpdateW"
                                AllowNullValue="True"
                                BoxPadding="18,16"
                                BorderThickness="0.9"
                                ClearIconVisibility="Never"
                                CornerRadius="0"
                                DisabledBorderThickness="0.9"
                                ErrorText=" "
                                FocusedBorderThickness="0.9"
                                HelpText=" "
                                IsErrorIconVisible="False"
                                LabelFontSize="17"
                                LabelText="宽 CM"
                                Margin="0,-11,0,-16"
                                MaxDecimalDigitCount="0"
                                TextFontSize="17"
                                TextHorizontalAlignment="Start"
                                ValueChanged="NumericEditSizeLsCreateUpdateW_ValueChanged" />

                            <dxe:NumericEdit 
                                x:Name="NumericEditSizeLsCreateUpdateH"
                                AllowNullValue="True"
                                BoxPadding="18,16"
                                BorderThickness="0.9"
                                ClearIconVisibility="Never"
                                CornerRadius="0"
                                DisabledBorderThickness="0.9"
                                ErrorText=" "
                                FocusedBorderThickness="0.9"
                                HelpText=" "
                                IsErrorIconVisible="False"
                                LabelFontSize="17"
                                LabelText="高 CM"
                                Margin="0,-11,0,-16"
                                MaxDecimalDigitCount="0"
                                TextFontSize="17"
                                TextHorizontalAlignment="Start"
                                ValueChanged="NumericEditSizeLsCreateUpdateH_ValueChanged" />

                            <dxe:NumericEdit 
                                x:Name="NumericEditSizeLsCreateUpdateV"
                                AllowNullValue="True"
                                BoxPadding="18,16"
                                BorderThickness="0.9"
                                ClearIconVisibility="Never"
                                CornerRadius="0"
                                DisabledBorderThickness="0.9"
                                ErrorText=" "
                                FocusedBorderThickness="0.9"
                                HelpText=" "
                                IsErrorIconVisible="False"
                                IsReadOnly="True"
                                LabelFontSize="17"
                                LabelText="体积 M³"
                                Margin="0,-11,0,-16"
                                MaxDecimalDigitCount="4"
                                TextFontSize="17"
                                TextHorizontalAlignment="Start"
                                ValueChanged="NumericEditSizeLsCreateUpdateV_ValueChanged" />

                            <dxe:NumericEdit 
                                x:Name="NumericEditSizeLsCreateUpdateP"
                                AllowNullValue="True"
                                BoxPadding="18,16"
                                BorderThickness="0.9"
                                ClearIconVisibility="Never"
                                CornerRadius="0"
                                DisabledBorderThickness="0.9"
                                ErrorText=" "
                                FocusedBorderThickness="0.9"
                                HelpText=" "
                                IsErrorIconVisible="False"
                                LabelFontSize="17"
                                LabelText="件数"
                                Margin="0,-11,0,-16"
                                MaxDecimalDigitCount="0"
                                TextFontSize="17"
                                TextHorizontalAlignment="Start"
                                ValueChanged="NumericEditSizeLsCreateUpdateP_ValueChanged" />

                            <Grid 
                                ColumnSpacing="24">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>
                                
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="56" />
                                </Grid.RowDefinitions>

                                <Button 
                                    x:Name="ButtonSizeLsCreateUpdateSubmit"
                                    Clicked="ButtonSizeLsCreateUpdateSubmit_Clicked"
                                    Grid.Column="0"
                                    Grid.Row="0"
                                    HeightRequest="56"
                                    Text="保存" />

                                <Button 
                                    x:Name="ButtonSizeLsCreateUpdateCancel"
                                    Clicked="ButtonSizeLsCreateUpdateCancel_Clicked"
                                    Grid.Column="1"
                                    Grid.Row="0"
                                    HeightRequest="56"
                                    Text="取消" />
                            </Grid>

                        </VerticalStackLayout>
                    </ScrollView>
                </dxc:DXPopup>

            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>