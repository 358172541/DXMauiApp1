<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:dxe="clr-namespace:DevExpress.Maui.Editors;assembly=DevExpress.Maui.Editors"
             x:Class="DXMauiApp1.Pages.LoginPage"
             Shell.NavBarIsVisible="False">
    <ScrollView>
        <VerticalStackLayout
            Padding="24"
            Spacing="24"
            VerticalOptions="Center">

            <dxe:TextEdit 
                x:Name="TextEditAccount"
                LabelText="匚匚"
                TextChanged="TextEditAccount_TextChanged" />

            <dxe:PasswordEdit 
                x:Name="PasswordEditPassword"
                LabelText="匚匚"
                TextChanged="PasswordEditPassword_TextChanged" />

            <Button 
                x:Name="ButtonLogin"
                Clicked="ButtonLogin_Clicked"
                Text="匚匚匚匚" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>