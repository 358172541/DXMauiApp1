<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:dxe="clr-namespace:DevExpress.Maui.Editors;assembly=DevExpress.Maui.Editors"
             x:Class= "DXMauiApp1.Pages.ContactUpdatePage"
             Title="ContactUpdatePage">
    <ContentPage.Content>
        <VerticalStackLayout 
            Padding="24"
            Spacing="24">

            <dxe:TextEdit 
                x:Name="TextEditName"
                LabelText="匚匚匚匚"
                TextChanged="TextEditName_TextChanged" />

            <dxe:TextEdit 
                x:Name="TextEditNumber"
                LabelText="匚匚匚匚"
                TextChanged="TextEditNumber_TextChanged" />
            
            <Button 
                x:Name="ButtonSubmit"
                Clicked="ButtonSubmit_Clicked"
                Text=">>" />

            <Button 
                x:Name="ButtonCancel"
                Clicked="ButtonCancel_Clicked"
                Text="匚匚" />
            
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>