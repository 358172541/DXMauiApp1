<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:pages="clr-namespace:DXMauiApp1.Pages"
       x:Class= "DXMauiApp1.AppShell"
       Shell.BackgroundColor="Navy"
       Shell.TabBarBackgroundColor ="WhiteSmoke"
       Shell.TabBarTitleColor="Navy">
    
    <ShellContent
            ContentTemplate="{DataTemplate pages:LoginPage}"
            Icon="grid"
            Route="LoginPage"
            Title="LoginPage" />

    <TabBar>
        <ShellContent
            ContentTemplate="{DataTemplate pages:ReceiptMakeupPage}"
            Icon="xamarin"
            Route="ReceiptMakeupPage"
            Title="快递签收" />

        <ShellContent
            ContentTemplate="{DataTemplate pages:Packag1120UpdatePage}"
            Icon="xamarin"
            Route="Packag1120UpdatePage"
            Title="更新位置" />

        <ShellContent
            ContentTemplate="{DataTemplate pages:VoyagePage}"
            Icon="xamarin"
            Route="VoyagePage"
            Title="船次检测" />

        <ShellContent
            ContentTemplate="{DataTemplate pages:ContactPage}"
            Icon="xamarin"
            Route="ContactPage"
            Title="ContactPage" />
    </TabBar>
</Shell>